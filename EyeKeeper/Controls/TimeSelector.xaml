<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="EyeKeeper.Controls.TimeSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

   <StackPanel Orientation="Horizontal" Spacing="6">
      <StackPanel x:Name="MinutesSpace" Orientation="Vertical">
         <TextBlock x:Name="MinutesText" x:Uid="TimeSelector_MinutesText"/>
         <ComboBox x:Name="MinutesCombo" DropDownOpened="MinutesCombo_DropDownOpened" DropDownClosed="MinutesCombo_DropDownClosed"/>
      </StackPanel>
      <StackPanel x:Name="SecondsSpace" Orientation="Vertical">
         <TextBlock x:Name="SecondsText" x:Uid="TimeSelector_SecondsText"/>
         <ComboBox x:Name="SecondsCombo" DropDownOpened="SecondsCombo_DropDownOpened" DropDownClosed="SecondsCombo_DropDownClosed"/>
      </StackPanel>
   </StackPanel>
</UserControl>
